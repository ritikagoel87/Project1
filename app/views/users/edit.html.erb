<h1>Edit Details</h1>

<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.label :fname %>
    <%= f.text_field :fname, :required => true, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :lname %>
    <%= f.text_field :lname, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :dob %>
    <%= f.date_field :dob, :max => Date.today, :class => 'form-control' %>
  </div>
  <%= f.submit "Update!", :class => 'btn btn-primary' %>
<% end %>
