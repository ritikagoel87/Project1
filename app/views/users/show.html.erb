<h1>Hello, <%= @user.fname %> <%= @user.lname %></h1>

<%= link_to "Edit Profile", edit_user_path, :class => 'btn btn-primary my-2' %>
<%= link_to 'Delete User', user_path, :method => 'delete', :data => { :confirm => 'Are you sure?' }, :class => 'btn btn-primary my-2' %>

<div class="row py-3">
  <span class="text-success mx-2">DOB: </span>
  <span><%= @user.dob %></span>
</div>
<div class="row py-3">
  <span class="text-success mx-2">EMAIL: </span>
  <span><%= @user.email %></span>
</div>


<% if @user.boards.present? %>
  <% @user.boards.each do |board| %>
    <div class="row">
      <div class="col-md-4">
        <% path = boards_path + "/" + board.id.to_s %>
        Board: <%= link_to board.name, path %>
      </div>
    <% if board.image.present? %>
      <div class="col-md-8">
        <%= image_tag board.image, :alt => board.name, :class => 'feature' %>
      </div>
    <% end %>
    </div>
  <% end %>
<% end %>

<% if @current_user.present? || @current_user.admin? %>
<%= link_to "New Board", new_board_path, :class => 'btn btn-primary my-5' %>
<% end %>
