<h1>Hello, <%= @user.fname %> <%= @user.lname %></h1>

<%= link_to "Edit Profile", edit_user_path, :class => 'btn btn-primary my-2' %>
<%= link_to 'Delete User', user_path, :method => 'delete', :data => { :confirm => 'Are you sure?' }, :class => 'btn btn-primary my-2' %>

<div class="row py-3">
  <span class="text-success mx-2">DOB: </span>
  <span><%= @user.dob %></span>
</div>
<div class="row py-3">
  <span class="text-success mx-2">EMAIL: </span>
  <span><%= @user.email %></span>
</div>


<% if @pins.present? %>
  <div class="row my-2">
    <% @count = 1 %>
    <% @pins.each do |pin| %>
      <% if @count == 5 %>
      </div>
      <div class="row my-3">
        <% @count = 1 %>
      <% end %>
      <div class="col-md-3">
        <% path = pins_path + "/" + pin.id.to_s %>
        <%= link_to image_tag(pin.image, :alt => pin.title, :class => 'feature'), path %>
      </div>
      <% @count += 1 %>
      <% end %>
    </div>
<% end %>

<% if @current_user.present? || @current_user.admin? %>
<%= link_to "New Board", new_board_path, :class => 'btn btn-primary my-5' %>
<% end %>
