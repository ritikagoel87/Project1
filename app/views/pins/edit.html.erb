<h1>Edit Pin</h1>

<%= form_for @pin do |f| %>
<div class="row">
  <div class="col-md-8">
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, :autofocus => true, :required => true, :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :url %>
      <%= f.text_field :url, :required => true, :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :board_ids %>
      <%= f.select :board_ids, Board.where(:user_id => @current_user.id).pluck(:name) %>
    </div>

    <%= f.submit "Save", :class => 'btn btn-primary btn-lg' %>
    <%= link_to "Cancel", pin_path, :class => 'btn btn-primary btn-lg' %>
    </div>
    <div class="col-md-4">
      <%= image_tag @pin.image, :alt => @pin.title %>
    </div>
</div>
<% end %>
