<div class="row my-5">
  <div class="mx-auto p-md-5 border rounded-lg w-50">
    <%= form_tag pins_display_pins_path do %>
      <%= label_tag :enter_url %>
      <%= text_field_tag :url, "", :class => 'form-control' %>

      <%= submit_tag "Lookup", :class => 'btn btn-primary my-2' %>
    <% end %>
  </div>
</div>


<div class="row my-5">
  <div class="mx-auto">
    <span class="mx-auto w-100 alert alert-danger">OR</span>
  </div>
</div>

<div class="row">
  <div class="mx-auto p-md-5 border rounded-lg w-50">
    <%= form_tag pins_display_pins_path, :multipart => true do %>
      <%= label_tag :upload_image %>
      <%= cl_image_upload_tag :file, :class => 'form-control-file' %>

      <%= submit_tag "Upload", :class => 'btn btn-primary my-2' %>
    <% end %>
  </div>
</div>
