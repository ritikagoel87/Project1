<h1><%= @pin.title %></h1>

<% b_path = boards_path + '/' + @board.id.to_s %>
<p>Board: <%= link_to @board.name, b_path %></p>
<%= link_to image_tag(@pin.image, :alt => @pin.title), @pin.url, :target => '_blank' %>

<%= link_to "Edit Pin", edit_pin_path %>
<%= link_to "Delete Pin", pin_path, :method => 'delete', :data => { :confirm => "Are you sure you want to delete this pin?" } %>
