<div class="d-flex justify-content-center"><h1>Sign In</h1></div>

<div>
  <% if flash[:error].present? %>
    <p><%= flash[:error] %></p>
  <% end %>
</div>
<%= form_tag login_path do %>
  <div class="form-row">
    <div class="col-md-5">
      <%= label_tag :email %>
      <%= email_field_tag :email, nil, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-row">
    <div class="col-md-5 mb-5">
      <%= label_tag :password %>
      <%= password_field_tag :password, nil, :class => 'form-control' %>
    </div>
  </div>
  <%= submit_tag "Sign In", :class => 'btn btn-success btn-lg' %>
<% end %>
