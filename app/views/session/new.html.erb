<div class="row">
  <div class="mx-auto">
    <h1>Sign In</h1>
  </div>
</div>

<div class="row">
  <div class="mx-auto p-md-5 border rounded-lg w-50">
    <div>
      <% if flash[:error].present? %>
        <p class="alert alert-danger"><%= flash[:error] %></p>
      <% end %>
    </div>
    <%= form_tag login_path do %>
      <div class="form-group">
          <%= label_tag :email %>
          <%= email_field_tag :email, nil, :class => 'form-control' %>
      </div>
      <div class="form-group">
          <%= label_tag :password %>
          <%= password_field_tag :password, nil, :class => 'form-control' %>
      </div>
      <%= submit_tag "Sign In", :class => 'btn btn-success btn-lg' %>
    <% end %>
  </div>
</div>
