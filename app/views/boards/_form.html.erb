<%= form_for @board do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :autofocus => true, :required => true, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.text_field :image, :class => 'form-control' %>
  </div>

  <%= f.submit "Create", :class => 'btn btn-primary btn-lg' %>
<% end %>
