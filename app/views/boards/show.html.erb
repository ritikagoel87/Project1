<div class="row">
  <div class="offset-md-1 col-md-2">
    <% if @board.image.present? %>
      <%= image_tag @board.image, :alt => @board.name %>
    <% end %>
  </div>
  <div class="offset-md-2 col-md-7">
    <h1><%= @board.name %></h1>
  </div>
</div>

<% if @current_user.id == @board.user_id %>
  <%= link_to "Edit Board", edit_board_path %>
  <%= link_to "Delete Board", board_path, :method => 'delete', :data => { :confirm => "Are you sure you want to delete this board? All the pins in this board would be deleted too!" } %>
<% end %>

<% @board.pins.each do |p| %>
  <% path = pins_path + '/' + p.id.to_s %>
  <p><%= link_to image_tag(p.image, :alt => p.title), path %></p>
<% end %>

<% if @current_user.id == @board.user_id %>
  <%= link_to "Create Pin", new_pin_path %>
<% end %>
